{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "strict": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"] },
    "lib": ["ES2022", "DOM", "DOM.Iterable"]
  },
  "include": ["src/server.ts", "src/workers.ts", "src/main.ts", "src/app/App.tsx", "src/app/index.tsx", "src/app/auth.ts", "src/app/pages/**/*"],
  "exclude": ["node_modules", "dist"]
}