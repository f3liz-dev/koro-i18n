{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"]
  },
  "include": [
    "src/index.ts",
    "src/optimized-server-entry.ts",
    "src/api/**/*",
    "src/lib/**/*",
    "src/config/**/*"
  ],
  "exclude": [
    "src/app/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}