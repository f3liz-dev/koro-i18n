{
  "name": "i18n-platform",
  "version": "1.0.0",
  "description": "Lightweight i18n platform with GitHub OAuth, stateless JWT, and automated batch commits",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "vite build && tsc --project tsconfig.build.json",
    "build:workers": "vite build --config vite.config.workers.ts",
    "dev": "concurrently \"tsx watch src/main.ts\" \"vite\"",
    "dev:server": "tsx watch src/main.ts",
    "dev:frontend": "vite",
    "dev:workers": "wrangler dev",
    "start": "node dist/main.js",
    "test": "vitest --run",
    "type-check": "tsc --noEmit",
    "deploy": "npm run build && wrangler deploy && wrangler deploy --config wrangler.cron.toml",
    "deploy:pages": "npm run build && wrangler pages deploy dist/frontend --project-name=i18n-platform",
    "db:init": "wrangler d1 execute i18n-platform-db --file=schema.sql",
    "db:init:dev": "wrangler d1 execute i18n-platform-db-dev --file=schema.sql --local",
    "db:query": "wrangler d1 execute i18n-platform-db",
    "logs": "wrangler tail",
    "logs:cron": "wrangler tail --config wrangler.cron.toml"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.1",
    "@hono/otel": "^1.0.1",
    "@octokit/auth-oauth-app": "^9.0.3",
    "@octokit/rest": "^22.0.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.54.2",
    "@opentelemetry/resources": "^1.30.1",
    "@opentelemetry/sdk-node": "^0.54.2",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "@solidjs/router": "^0.15.3",
    "dotenv": "^17.2.3",
    "fp-ts": "^2.16.1",
    "hono": "^4.6.3",
    "io-ts": "^2.2.20",
    "jsonwebtoken": "^9.0.2",
    "solid-js": "^1.9.10",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.14.0",
    "@cloudflare/workers-types": "^4.20251106.1",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "jsdom": "^27.1.0",
    "postcss": "^8.5.6",
    "terser": "^5.44.1",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2",
    "vite": "^7.2.1",
    "vite-plugin-solid": "^2.11.10",
    "vitest": "^4.0.7",
    "wrangler": "^4.45.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "translation",
    "github",
    "crowdin",
    "toml"
  ],
  "author": "",
  "license": "MIT"
}
