{
  "name": "i18n-platform",
  "version": "1.0.0",
  "description": "Lightweight i18n platform with GitHub OAuth, stateless JWT, and automated batch commits",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "dev:workers": "wrangler dev",
    "dev:all": "node dev-all.js",
    "test": "vitest --run",
    "type-check": "tsc --noEmit",
    "clean": "rimraf .wrangler dist",
    "deploy": "npm run build && wrangler deploy && wrangler deploy --config wrangler.cron.toml",
    "deploy:pages": "npm run build && wrangler pages deploy dist/frontend --project-name=i18n-platform",
    "db:init": "wrangler d1 execute DB --file=schema.sql --local",
    "db:query": "wrangler d1 execute DB --local",
    "logs": "wrangler tail"
  },
  "dependencies": {
    "@octokit/auth-oauth-app": "^9.0.3",
    "@octokit/rest": "^22.0.1",
    "@solidjs/router": "^0.15.3",
    "hono": "^4.6.3",
    "jsonwebtoken": "^9.0.2",
    "solid-js": "^1.9.10",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.14.0",
    "@cloudflare/workers-types": "^4.20251106.1",
    "@tailwindcss/vite": "^4.1.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "jsdom": "^27.1.0",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.2.2",
    "vite": "npm:rolldown-vite@latest",
    "vite-plugin-solid": "^2.11.10",
    "vitest": "^4.0.7",
    "wrangler": "^4.45.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "translation",
    "github",
    "crowdin",
    "toml"
  ],
  "author": "",
  "license": "MIT"
}
