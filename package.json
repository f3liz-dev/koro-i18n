{
  "name": "koro-i18n",
  "version": "1.0.0",
  "description": "Production-ready i18n platform with Elm frontend and Cloudflare Workers backend",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "pnpm run prisma:generate && vite build",
    "dev": "vite",
    "dev:workers": "wrangler dev",
    "dev:all": "node scripts/dev-all.js",
    "test": "vitest --run",
    "type-check": "tsc --noEmit",
    "clean": "rimraf .wrangler dist",
    "deploy": "pnpm run build && wrangler deploy",
    "prisma:generate": "prisma generate",
    "prisma:migrate:local": "wrangler d1 migrations apply koro-i18n-db --local",
    "prisma:migrate:remote": "wrangler d1 migrations apply koro-i18n-db --remote",
    "logs": "wrangler tail"
  },
  "dependencies": {
    "@hono/valibot-validator": "^0.6.0",
    "@octokit/auth-oauth-app": "^9.0.3",
    "@octokit/rest": "^22.0.1",
    "@prisma/adapter-d1": "^6.19.0",
    "@prisma/client": "^6.19.0",
    "hono": "^4.6.3",
    "jose": "^6.1.0",
    "valibot": "^1.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251106.1",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "elm": "0.19.1-6",
    "eslint": "^9.39.1",
    "prisma": "^6.19.0",
    "typescript": "^5.2.2",
    "vite": "npm:rolldown-vite@latest",
    "vite-plugin-elm": "^3.0.1",
    "vitest": "^4.0.7",
    "wrangler": "^4.45.4"
  },
  "packageManager": "pnpm@9.15.9",
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "translation",
    "github",
    "cloudflare-workers",
    "elm"
  ],
  "author": "",
  "license": "MIT"
}
