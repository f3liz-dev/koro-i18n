{
  "name": "i18n-platform",
  "version": "1.0.0",
  "description": "Lightweight i18n platform with GitHub OAuth, stateless JWT, and automated batch commits",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "pnpm run prisma:generate && vite build",
    "dev": "vite",
    "dev:workers": "wrangler dev",
    "dev:all": "node scripts/dev-all.js",
    "test": "vitest --run",
    "type-check": "tsc --noEmit",
    "clean": "rimraf .wrangler dist",
    "deploy": "pnpm run build && wrangler deploy",
    "prisma:generate": "prisma generate",
    "prisma:migrate:local": "wrangler d1 migrations apply koro-i18n-db --local",
    "prisma:migrate:remote": "wrangler d1 migrations apply koro-i18n-db --remote",
    "logs": "wrangler tail"
  },
  "dependencies": {
    "@msgpack/msgpack": "^3.1.2",
    "@octokit/auth-oauth-app": "^9.0.3",
    "@octokit/rest": "^22.0.1",
    "@prisma/adapter-d1": "^6.19.0",
    "@prisma/client": "^6.19.0",
    "@solidjs/router": "^0.15.3",
    "hono": "^4.6.3",
    "jose": "^6.1.0",
    "js.foresight": "^3.3.3",
    "solid-js": "^1.9.10",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.14.0",
    "@cloudflare/workers-types": "^4.20251106.1",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "jsdom": "^27.1.0",
    "prisma": "^6.19.0",
    "typescript": "^5.2.2",
    "unocss": "^66.5.6",
    "vite": "npm:rolldown-vite@latest",
    "vite-plugin-solid": "^2.11.10",
    "vitest": "^4.0.7",
    "wrangler": "^4.45.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "translation",
    "github",
    "crowdin",
    "toml"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.22.0+sha512.bf049efe995b28f527fd2b41ae0474ce29186f7edcb3bf545087bd61fbbebb2bf75362d1307fda09c2d288e1e499787ac12d4fcb617a974718a6051f2eee741c"
}
