{
  "name": "i18n-platform",
  "version": "1.0.0",
  "description": "Lightweight internationalization platform with GitHub integration",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:frontend && tsc && npm run build:workers && npm run build:server",
    "build:frontend": "vite build",
    "build:workers": "vite build --config vite.config.workers.ts",
    "build:server": "tsc --project tsconfig.server.json",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:frontend\"",
    "dev:server": "tsx watch src/index.ts",
    "dev:frontend": "vite",
    "dev:workers": "wrangler dev --compatibility-date=2023-11-01",
    "dev:workers:vite": "vite dev --config vite.config.workers.ts",
    "deploy:workers": "powershell -ExecutionPolicy Bypass -File scripts/deploy-workers.ps1",
    "deploy:workers:dev": "powershell -ExecutionPolicy Bypass -File scripts/deploy-workers.ps1 development",
    "deploy:workers:staging": "powershell -ExecutionPolicy Bypass -File scripts/deploy-workers.ps1 staging",
    "deploy:server": "powershell -ExecutionPolicy Bypass -File scripts/deploy-server.ps1",
    "deploy:server:monitoring": "powershell -ExecutionPolicy Bypass -File scripts/deploy-server.ps1 production -WithMonitoring",
    "start": "node dist/index.js",
    "start:optimized": "node dist/optimized-server-entry.js",
    "test": "vitest --run --config vitest.config.ts",
    "test:watch": "vitest --config vitest.config.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "docs:build": "powershell -ExecutionPolicy Bypass -File scripts/build-docs.ps1",
    "docs:build:pdf": "powershell -ExecutionPolicy Bypass -File scripts/build-docs.ps1 -Format pdf",
    "docs:build:png": "powershell -ExecutionPolicy Bypass -File scripts/build-docs.ps1 -Format png",
    "docs:validate": "powershell -ExecutionPolicy Bypass -File scripts/validate-docs.ps1",
    "docs:watch": "powershell -ExecutionPolicy Bypass -File scripts/build-docs.ps1 -Watch"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.1",
    "@hono/otel": "^1.0.1",
    "@octokit/auth-oauth-app": "^9.0.3",
    "@octokit/rest": "^22.0.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.54.2",
    "@opentelemetry/resources": "^1.30.1",
    "@opentelemetry/sdk-node": "^0.54.2",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "@solidjs/router": "^0.15.3",
    "dotenv": "^17.2.3",
    "fp-ts": "^2.16.1",
    "hono": "^4.6.3",
    "io-ts": "^2.2.20",
    "jsonwebtoken": "^9.0.2",
    "solid-js": "^1.9.10",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.14.0",
    "@cloudflare/workers-types": "^4.20251106.1",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "jsdom": "^27.1.0",
    "postcss": "^8.5.6",
    "terser": "^5.44.1",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2",
    "vite": "^7.2.1",
    "vite-plugin-solid": "^2.11.10",
    "vitest": "^4.0.7",
    "wrangler": "^4.45.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "translation",
    "github",
    "crowdin",
    "toml"
  ],
  "author": "",
  "license": "MIT"
}
